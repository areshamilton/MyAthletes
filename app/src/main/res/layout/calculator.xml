<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        android:baselineAligned="false">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="406dp"
            android:layout_height="286dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/currentLiftLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/currentLiftLabel"
                        android:textColor="@color/textColor"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/currWeightBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:background="@drawable/border"
                        android:textColor="@color/textColor"
                        android:textSize="30sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/currentBpmLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="@string/currentBpmLabel"
                        android:textColor="@color/textColor"
                        android:textSize="23sp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/currBpmBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="end"
                        android:textColor="@color/textColor"
                        android:textSize="30sp"
                        tools:ignore="TextContrastCheck" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/targetBpmLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="@string/targetBpmLabel"
                        android:textColor="@color/textColor"
                        android:textSize="23sp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/tarBpmBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/textColor"
                        android:textSize="30sp"
                        android:background="@drawable/border"
                        tools:ignore="TextContrastCheck" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/nextLiftLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="@string/nextLiftLabel"
                        android:textColor="@color/blue"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/nextLiftBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/blue"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />
                </TableRow>
            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="@drawable/rounded_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="349dp"
                android:layout_height="308dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonCalc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonOne"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/one"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />

                    <Button
                        android:id="@+id/buttonTwo"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/two"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />

                    <Button
                        android:id="@+id/buttonThree"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/three"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonFour"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/four"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />

                    <Button
                        android:id="@+id/buttonFive"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/five"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />

                    <Button
                        android:id="@+id/buttonSix"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/six"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonSeven"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/seven"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />

                    <Button
                        android:id="@+id/buttonEight"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/eight"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />

                    <Button
                        android:id="@+id/buttonNine"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/nine"
                        android:textColor="@color/textColor"
                        android:textSize="50sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="230dp">

                    <Button
                        android:id="@+id/buttonDecimal"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/decimal"
                        android:textColor="@color/textColor"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonZero"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:text="@string/zero"
                        android:textColor="@color/textColor"
                        android:textSize="50sp"
                        tools:ignore="DuplicateSpeakableTextCheck" />

                    <Button
                        android:id="@+id/buttonClear"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_button"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/clear"
                        android:textColor="#31C5C5"
                        android:textSize="50sp" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/buttonCalc"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="303dp"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:background="@drawable/calc_button"
                android:fontFamily="sans-serif-medium"
                android:text="@string/calculate"
                android:textColor="#f4f4f4"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TextContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>